<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAlbums" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/title_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bright_blue</item>
        <item name="colorSecondaryVariant">@color/bright_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- background color. -->
        <item name="android:background">@color/light_background</item>
        <item name="android:textColor">@color/title_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.MyAlbums.TitleStart" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_start_size</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="Theme.MyAlbums.TitleEnd" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_end_size</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="Theme.MyAlbums.ListTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/translucent</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textSize">@dimen/list_title_text_size</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.MyAlbums.ListSubtitle">
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:background">@color/translucent</item>
        <item name="android:textSize">@dimen/list_subtitle_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.MyAlbums.DetailTitle">
        <item name="android:background">@color/translucent</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MyAlbums.DetailSubtitle">
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:background">@color/translucent</item>
        <item name="android:textSize">@dimen/detail_subtitle_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.MyAlbums.SecondaryText">
        <item name="android:textSize">@dimen/detail_secondary_text_size</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

    <style name="Theme.MyAlbums.ActionButton" parent="">
        <item name="android:paddingStart">@dimen/padding_button_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_button_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_button_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_button_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/bright_blue</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>

    <style name="Theme.MyAlbums.Icon" parent="">
        <item name="android:tint">@color/icons_tint_light</item>
    </style>

    <style name="Theme.MyAlbums.ErrorTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/translucent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/error_title_text_size</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal</item>
    </style>

    <style name="Theme.MyAlbums.ErrorDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:background">@color/translucent</item>
        <item name="android:textSize">@dimen/error_description_text_size</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal</item>
    </style>

</resources>